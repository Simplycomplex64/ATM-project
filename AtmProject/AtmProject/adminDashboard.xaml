            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-11.706"/>
                    <RotateTransform/>
                    <TranslateTransform X="-3.626"/>
                </TransformGroup>
            </Label.RenderTransform>
            <Label.BorderBrush>
