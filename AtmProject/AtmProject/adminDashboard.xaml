        <GridSplitter x:Name="gridSplitter_Copy" HorizontalAlignment="Left" Height="429" Margin="840,-68,0,0" VerticalAlignment="Top" Width="2" Background="#FF34393A" RenderTransformOrigin="0.5,0.5">
